
@PrefixCls:news;

.@{PrefixCls}-outer{

  &-content{

    &-info{
      padding: 20px 40px;
      line-height: 1.5em;
    }
  }
}

.@{PrefixCls}-title{
  font-weight: bold;
}
.@{PrefixCls}-item {
  & span {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  & img {
    width: 180px;
    height: 140px;
  }
}
