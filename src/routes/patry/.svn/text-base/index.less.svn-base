@PrefixCls: patry;

.title{
  background: #fff;
  font-size: 36px;

}
.@{PrefixCls}-container {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20px;
  background: #fff;

  &-title {
    padding: 20px 0;
    border-bottom: 2px solid #aaa;
  }

  &-date {

  }
  &-news {
    margin-left: 40px;
  }
}

.@{PrefixCls}-gridbox {
  padding: 20px 20px;
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-bottom: 6px solid #ddd;
  & span {
   display: flex;
    flex-direction: column;
    align-items: center;
    & img {
      margin-bottom: 10px;
      width: 120px;
    }
  }
}
.@{PrefixCls}-fixbanner{
  & img{
    width: 100%;
    max-height: 22vh;
  }
}
.@{PrefixCls}-bannerbox{
    background: #efefef;
    height: 16vh;
}
.@{PrefixCls}-bannertitle{
  &-icon{
    width: 50px;
    background: red;
    height: 50px;
  }
  .title;
  padding:20px 40px;
}

.@{PrefixCls}-item {
  & span {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  & img {
    width: 180px;
    height: 120px;
  }
}
.@{PrefixCls}-listtitle{
  .title;
  padding: 0;
  color: #000;
}
