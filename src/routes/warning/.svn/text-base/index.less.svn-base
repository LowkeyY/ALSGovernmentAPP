@PrefixCls: warning;

.public {
  border-bottom: 2px solid #ddd;
  margin-bottom: 10px;
}

.@{PrefixCls}-outer {
  width: 100%;
  padding: 15px;
  box-sizing: border-box;
  background: #fff;
  -webkit-user-select: none;
  user-select: none;
  height:100vh;
  :global {
    .am-list-item.am-list-item-middle .am-list-line {
      height: 100% !important;
    }
    //.am-activity-indicator.am-activity-indicator-toast .am-activity-indicator-spinner{
    //  display: none;
    //}
  }
  &-title {
    .public;
  }

  &-type {
    .public;
  }
  &-content {
    padding-left: 0.15rem;
    :global {
      & .am-list-line {
        padding-right: 0.15rem;
        & .am-list-item {
          padding-left: 0.15rem;
          & .am-textarea-control {
            padding: 0
          }
        }
      }
    }
  }

  &-img {
    border-top: 2px solid #ddd;
    & div {
      & p {
        display: inline-block;
        font-size: 36px;
        color: #000;
        font-weight: bold;
      }

      & span {
        float: right;
        margin-top: 10px;
        padding: 20px;
        border-radius: 50%;
        background: #4eaaf7;
      }
    }
  }

  &-voice {
    margin-bottom: 10px;
    &-title {
      font-size: 36px;
      color: #000;
      font-weight: bold;
      margin:0 ;
    }
    &-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom:50px;

      &-files {

      }

      &-button {
        width: 120px;
        height: 60px;
        line-height: 60px;
        padding: 20px ;
        text-align: center;
        background: #4eaaf7;
        color: #fff;
        border-radius:30px;
      }
    }
  }
  &-button {
    display: flex;
    justify-content: flex-end;
    margin-top: 30px;

  }
  &-info {
    padding-top: 150px;
    text-align: center;
    font-size: 40px;
    font-weight: bold;
    color: #fff;
  }
}
